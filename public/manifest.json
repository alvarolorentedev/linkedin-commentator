{
  "manifest_version": 3,

  "name": "LinkedIn Commentator",
  "description": "Generate friendly LinkedIn comments using a local or built-in AI model and insert them into the composer.",
  "version": "0.1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "*://*.linkedin.com/*"
  ]
}
